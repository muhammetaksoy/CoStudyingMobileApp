                                        </Frame>
                                        <Label Grid.Row="0" Grid.Column="1" LineBreakMode="TailTruncation">

                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span TextColor="{StaticResource defaultBlackColor}" FontSize="12" FontFamily="CustomBold" Text="{Binding ItemName}"></Span>
